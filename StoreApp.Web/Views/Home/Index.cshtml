@model ProductListViewModel

<h5>Index Page</h5>

@if(Model.Products.Count() == 0)
{
    <p>The End</p>
}

@foreach(var p in Model.Products)
{
    <div>
        <h3>@p.Name</h3>
        <p>@p.Description</p>
        <p>@p.Price</p>
    </div>
}

@* Tag Helper pagination *@
@* <div page-model="@Model.PageInfo" page-action="Index"></div> *@


@for(var i = 1; i <= Model.PageInfo.TotalPages; i++)
{
    <a href="/?page=@i">@i</a>
}



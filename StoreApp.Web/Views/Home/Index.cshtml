@model ProductListViewModel


<div class="row">
    <div class="col-md-3">
        <vc:categories-list/>
    </div>
    <div class="col-md-9">
        @if(Model.Products.Count() == 0)
        {
            <p>The End</p>
        }

        @foreach(var p in Model.Products)
        {
            <div class="card card-outline-secondary mb-2 p-2">
                <div class="d-flex justify-content-between">
                    <div>                
                        <h3>@p.Name</h3>
                        <p>@p.Description</p>
                    </div>
                    <div>
                        <span class="badge rounded-pill text-bg-success">@p.Price $</span>
                    </div>
                </div>
            </div>
        }


        @if(Model.PageInfo.TotalPages > 1)
        {
                @* Tag Helper pagination *@
                <div 
                    page-model="@Model.PageInfo" 
                    page-action="Index"
                    page-class="btn"
                    page-class-link="btn-outline-secondary"
                    page-class-active="btn-secondary"
                    class="btn-group my-2">
                </div>
        }





